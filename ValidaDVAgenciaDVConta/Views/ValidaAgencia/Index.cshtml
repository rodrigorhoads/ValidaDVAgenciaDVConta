@model ValidaDVAgenciaDVConta.Models.ContaBancaria
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<form asp-antiforgery="true" asp-action="GerarDV" asp-controller="ValidaAgencia" method="post">
    <fieldset>
        <div class="row">
            <div class="form-group col-sm-2">
                <label for="txtBanco">Banco</label>
                <input type="text" asp-for="Banco" class="form-control" />
            </div>
            <div class="form-group col-sm-2">
                <label for="Agencia">Agencia</label>
                <input type="text" asp-for="Agencia" class="form-control" />
            </div>
            <div class="form-group col-sm-2">
                <label for="txtConta">Conta</label>
                @Html.EditorFor(model => model.Conta, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group col-sm-1">
                <label for="txtDvConta">DV</label>
                @Html.EditorFor(model => model.DvConta, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div>
            @*@Html.ActionLink("Validar","GerarDV","ValidaAgencia",null,new { htmlAttributes = new { @class="btn btn-primary"} })*@
            <button type="submit" class="btn btn-primary">Validar</button>
        </div>
    </fieldset>
</form>

